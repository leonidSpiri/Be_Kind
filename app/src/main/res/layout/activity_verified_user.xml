<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22FF9800">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Первая страница паспорта:"
                android:textSize="24sp"
                app:layout_constraintHeight_min="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_first_passport_camera"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_photo"
                android:textColor="@color/good"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_label2" />

            <Button
                android:id="@+id/btn_first_passport_gallery"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_from_gallery"
                android:textColor="@color/good"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toEndOf="@+id/btn_first_passport_camera"
                app:layout_constraintTop_toBottomOf="@+id/txt_label2" />

            <ImageView
                android:id="@+id/img_first_passport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/app_name"
                android:cropToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_first_passport_camera"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

            <View
                android:id="@+id/view_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="7dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/img_first_passport" />


            <TextView
                android:id="@+id/txt_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Вторая страница паспорта:"
                android:textSize="24sp"
                app:layout_constraintHeight_min="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_first_passport" />

            <Button
                android:id="@+id/btn_second_passport_camera"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_photo"
                android:textColor="@color/good"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_label3" />

            <Button
                android:id="@+id/btn_second_passport_gallery"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_from_gallery"
                android:textColor="@color/good"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toEndOf="@+id/btn_second_passport_camera"
                app:layout_constraintTop_toBottomOf="@+id/txt_label3" />

            <ImageView
                android:id="@+id/img_second_passport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/app_name"
                android:cropToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_second_passport_camera"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

            <View
                android:id="@+id/view_separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="7dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/img_second_passport" />


            <TextView
                android:id="@+id/txt_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Сертификат:"
                android:textSize="24sp"
                app:layout_constraintHeight_min="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_second_passport" />

            <Button
                android:id="@+id/btn_cert_camera"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_photo"
                android:textColor="@color/good"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_label4" />

            <Button
                android:id="@+id/btn_cert_gallery"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_from_gallery"
                android:textColor="@color/good"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="15dp"
                app:layout_constraintStart_toEndOf="@+id/btn_cert_camera"
                app:layout_constraintTop_toBottomOf="@+id/txt_label4" />

            <ImageView
                android:id="@+id/img_cert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/app_name"
                android:cropToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_cert_camera"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

            <View
                android:id="@+id/view_separator3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="7dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/img_cert" />

            <Button
                android:id="@+id/btn_complete"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="@string/complete_work"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator3" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>